# Short Video Maker Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3123
LOG_LEVEL=info

# API Keys & External Services
PEXELS_API_KEY=your_pexels_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Whisper Configuration
WHISPER_VERSION=1.7.1
WHISPER_MODEL=medium.en
WHISPER_VERBOSE=false

# Kokoro TTS Configuration
KOKORO_MODEL_PRECISION=fp32

# Docker & Performance Settings
RUNNING_IN_DOCKER=false
DEV_MODE=false
MAX_CPUS=auto
GPU_ACCELERATION=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/video_db

# File Storage Paths
DATA_DIR=/app/data
LIBS_DIR=/app/libs
STATIC_DIR=/app/static
VIDEOS_DIR=/app/data/videos
TEMP_DIR=/tmp
MUSIC_DIR=/app/data/music

# Security
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Monitoring & Observability
ENABLE_METRICS=true
METRICS_PORT=9090
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# GPU Configuration (for CUDA environments)
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=all
GPU_MEMORY_FRACTION=0.85
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512