# TTS Provider API Keys and Pexels API Key
# Copy this file to .env and fill in your actual API keys

# Pexels API Key (https://www.pexels.com/api/)
PEXELS_API_KEY=your_pexels_api_key_here

# ElevenLabs TTS (https://elevenlabs.io/)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# OpenAI TTS (https://platform.openai.com/)
OPENAI_API_KEY=your_openai_api_key_here

# Azure Speech Services (https://azure.microsoft.com/en-us/products/ai-services/ai-speech)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_ENDPOINT=your_azure_speech_endpoint_here
AZURE_SPEECH_REGION=your_azure_region_here

# Google Cloud Text-to-Speech (https://cloud.google.com/text-to-speech)
GOOGLE_TTS_API_KEY=your_google_tts_api_key_here
GOOGLE_CLOUD_PROJECT=your_google_cloud_project_id_here

# Kokoro TTS (Existing provider)
KOKORO_API_KEY=your_kokoro_api_key_here
KOKORO_API_ENDPOINT=https://api.kokoro.io/v1

# TTS Configuration
TTS_DEFAULT_PROVIDER=elevenlabs
TTS_MAX_BUDGET=100
TTS_MAX_CHARACTERS=1000000
TTS_ENABLE_COST_OPTIMIZATION=true
TTS_ENABLE_HEALTH_MONITORING=true

# Logging
LOG_LEVEL=info
ENABLE_TTS_DEBUG=false

# Rate Limiting
TTS_MAX_REQUESTS_PER_MINUTE=60
TTS_MAX_CONCURRENT_REQUESTS=5

# Timeouts
TTS_REQUEST_TIMEOUT_MS=30000
TTS_RETRY_ATTEMPTS=3